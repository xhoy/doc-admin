"    linux:~# su otrs\n"
"    linux:/root$ cd\n"
"    linux:~$ pwd\n"
"    /opt/otrs\n"
"    linux:~$ gpg --list-keys\n"
"    /opt/otrs/.gnupg/pubring.gpg\n"
"    ----------------------------\n"
