#: en/backup-and-restore.xml:26
#, no-wrap
msgid ""
"linux:/opt/otrs# cd scripts/\n"
"linux:/opt/otrs/scripts# ./backup.pl --help\n"
"backup.pl &lt;Revision 1.1&gt; - backup script\n"
"Copyright (c) 2001-2005 Martin Edenhofer &lt;martin@otrs.org&gt;\n"
"usage: backup.pl -d /data_backup/ [-c bzip2|gzip] [-r 30] [-t "
"nofullbackup]\n"
"linux:/opt/otrs/scripts#\n"
msgstr ""

