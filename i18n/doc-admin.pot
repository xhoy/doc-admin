"            UserLogin => ['some login'],\n"
"            # ...\n"
"            Group_rw => [\n"
"                'hotline',\n"
"            ],\n"
"            # ...\n"
"        },\n"
"        # current customer user match properties\n"
"        CustomerUser => {\n"
"            UserLogin => ['some login'],\n"
"            # ...\n"
