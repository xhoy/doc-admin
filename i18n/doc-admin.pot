#. type: Content of: <chapter><section><section><example><title>
#: en/external-backends.xml:303
msgid "Configuring an LDAP customer backend"
msgstr ""

#. type: Content of: <chapter><section><section><example><para><programlisting>
#: en/external-backends.xml:307
#, no-wrap
msgid ""
"# CustomerUser\n"
"# (customer ldap backend and settings)\n"
"$Self->{CustomerUser} = {\n"
"    Name => 'LDAP Data Source',\n"
"    Module => 'Kernel::System::CustomerUser::LDAP',\n"
"    Params => {\n"
"        # ldap host\n"
"        Host => 'bay.csuhayward.edu',\n"
"        # ldap base dn\n"
"        BaseDN => 'ou=seas,o=csuh',\n"
"        # search scope (one|sub)\n"
"        SSCOPE => 'sub',\n"
"        # The following is valid but would only be necessary if the\n"
"        # anonymous user does NOT have permission to read from the LDAP "
"tree\n"
"        UserDN => '',\n"
"        UserPw => '',\n"
"        # in case you want to add always one filter to each ldap query, "
"use\n"
"        # this option. e. g. AlwaysFilter => '(mail=*)' or AlwaysFilter => "
